#include <stdlib.h>
#include <string.h>
#include <stdio.h>  // Add this line to include the stdio.h header
#include "lists.h"

/**
 * main - check the code
 *
 * Return: Always 0.
 */
int main(void)
{
    list_t *head;
    list_t *new;
    list_t hello = {"World", 5, NULL};
    size_t n;

    head = &hello;
    new = (list_t *)malloc(sizeof(list_t));
    if (new == NULL)
        exit(1);

    new->str = strdup("Hello");
    if (new->str == NULL)
    {
        free(new);
        exit(1);
    }

    new->len = 5;
    new->next = head;
    head = new;
    n = print_list(head);
    printf("-> %lu elements\n", n);

    printf("\n");
    free(new->str);
    new->str = NULL;
    n = print_list(head);
    printf("-> %lu elements\n", n);

    free(new);
    return 0;
}
